<AnchorPane prefHeight="525.0" prefWidth="425.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.unipar.gdsystem.controller.AbrirCaixaController">
   <children>
      <Label layoutX="26.0" layoutY="30.0" text="Fechar Caixa">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="26.0" layoutY="70.0" text="Para fechar o caixa informe o valor de fechamento">
         <font>
            <Font size="15.0" />
         </font></Label>
      <Label fx:id="lblCaixaAberto" alignment="CENTER" layoutX="128.0" layoutY="114.0" text="Caixa Aberto" textFill="#00c610">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="lblAbertura" layoutX="42.0" layoutY="207.0" text="Data de Abertura " />
      <TextField fx:id="txtAbertura" disable="true" editable="false" layoutX="154.0" layoutY="203.0" prefHeight="25.0" prefWidth="200.0" />
      <Label fx:id="lblValorAbertura" layoutX="42.0" layoutY="242.0" text="Valor de Abertura" />
      <TextField fx:id="txtValorAbertura" disable="true" layoutX="153.0" layoutY="238.0" prefHeight="25.0" prefWidth="200.0" />
